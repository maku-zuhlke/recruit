orange = rgba(250, 122, 21, 0.5)
white = rgba(255, 255, 255, 0.8)

main_colours()
  background: transparent
  color: #FA7A15
  border-color: #FA7A15
  font-size: medium

op_colours()
  background: orange
  color: white
  border-color: orange
  font-size: medium

/* Base Application Styles */
body
  background: white
  background-image: url("/images/bcgr.jpg")
  background-repeat: no-repeat
  background-size:100%
  font-size: medium

.center
  text-align: center
  vertical-align: middle

.logo
  margin-top: 2%

.content
  left: 0
  right: 0
  z-index: 9999
  margin-top: 1%
  background-color: rgba(255, 255, 255, 0.4)
  padding-bottom: 1%
  padding-top: 1%

.submit
  vertical-align: bottom
  float: right
  margin-top: 1.5%
  &, &:focus
    main_colours()
  &:hover, &:active:hover, &:active
    op_colours()


.space
  margin-top: 15px
  margin-bottom: 5px
  padding: 5px 0px 5px 0px
  border-radius: 3px
  background: transparent
  color: black
  border-color: black
  font-weight: bolder
  font-size: large

.start
  margin-top: 10%
  margin-bottom: 10%
  &, &:focus
    main_colours()
  &:hover, &:active, &:active:hover
    op_colours()

.code
  margin-bottom: 0.5%
  padding-bottom: 5%
  padding-top: 20%
  width: 80%
  margin-left: 10%
  font-size: medium
  &:hover, &:active, &:active:hover
    background: #4D5656

.talent
  float: initial

/* Animations - Zuhlke splash */
.image
  #canvas
    position: relative
    z-index: 1000
    width: 100%
    height: 100%
    animation: fromBack 0.5s linear 0s backwards

@keyframes fromBack
  0%
    transform: scale(0)
    opacity: 0
  100%
    transform: scale(1)
    opacity: 1
