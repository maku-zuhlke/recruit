orange = rgba(250, 122, 21, 0.8)
white = rgba(255, 255, 255, 0.8)
lilac = rgba(152, 99, 174, 1)

main_colours()
  background: white
  color: orange
  border-color: orange
  font-size: medium

op_colours()
  background: orange
  color: white
  border-color: orange
  font-size: medium

zuhlke_colours()
  background: white
  color: lilac
  border-color: lilac
  font-size: medium

op_zuhlke_colours()
  background: lilac
  color: white
  border-color: lilac
  font-size: medium

/* Base Application Styles */
body
  background: url("/images/bcgr.jpg") no-repeat fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  font-size: medium

.center
  text-align: center
  vertical-align: middle

.logo
  margin-top: 2%

.content
  left: 0
  right: 0
  z-index: 9999
  background-clip: content-box
  background-color: rgba(255, 255, 255, 0.4)

.submit
  vertical-align: bottom
  float: right
  margin-top: 1.5%
  &, &:focus
    main_colours()
  &:hover, &:active:hover, &:active
    op_colours()

.space
  margin-top: 1.5%
  margin-bottom: 1.5%
  padding: 1% 0 1% 0
  color: orange
  font-weight: bolder
  font-size: larger

.start
  margin-top: 10%
  margin-bottom: 10%
  &, &:focus
    main_colours()
  &:hover, &:active, &:active:hover
    op_colours()

.code
  margin-bottom: 0.5%
  padding-bottom: 5%
  padding-top: 20%
  width: 80%
  margin-left: 10%
  font-size: medium
  &:hover, &:active, &:active:hover
    background: #4D5656

.timer
  color: orange
  font-size: larger
  font-weight: bolder

.talent
  &, &:focus
    zuhlke_colours()
  &:hover, &:active, &:active:hover
    op_zuhlke_colours()
  animation: fromBack 1s linear 1.5s backwards

/* Animations - Zuhlke splash */
.image
  #canvas
    position: relative
    z-index: 1000
    width: 100%
    height: 100%
    animation: fromBack 0.5s linear 0s backwards

@keyframes fromBack
  0%
    transform: scale(0)
    opacity: 0
  100%
    transform: scale(1)
    opacity: 1
