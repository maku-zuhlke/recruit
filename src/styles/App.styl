orange = rgba(250, 122, 21, 0.8)
white = rgba(255, 255, 255, 0.8)
lilac = rgba(152, 99, 174, 1)

main_colours()
  background: white
  color: orange
  border-color: orange
  font-size: medium

op_colours()
  background: orange
  color: white
  border-color: orange
  font-size: medium

zuhlke_colours()
  background: white
  color: lilac
  border-color: lilac
  font-size: medium

op_zuhlke_colours()
  background: lilac
  color: white
  border-color: lilac
  font-size: medium

/* Base Application Styles */
html
  height: 100%

body
  background: url("/images/bcgr.jpg") no-repeat fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  font-size: medium
  height: 100%

#app
  height: 100%

.index
  height: 100%

.row
  margin-left: 0%

.center
  text-align: center
  vertical-align: middle

.logoRow
  height: 10%
  .logo
    margin-top: 2%

.contentRow
  height: 60%
  .content
    left: 0
    right: 0
    z-index: 9999
    margin-top: 1%
    background-color: rgba(255, 255, 255, 0.4)
    padding-bottom: 1%
    padding-top: 1%
    height: 80%
    .challenge
      height: 100%
      .puzzle
        height: 100%
.logo
  margin-top: 2%
  padding-left: 0%

.submit
  vertical-align: bottom
  float: right
  margin-top: 1.5%
  &, &:focus
    main_colours()
  &:hover, &:active:hover, &:active
    op_colours()

.space
  margin-top: 1.5%
  margin-bottom: 1.5%
  padding: 1% 0 1% 0
  color: orange
  font-weight: bolder
  font-size: larger

.start
  margin-top: 10%
  margin-bottom: 10%
  &, &:focus
    main_colours()
  &:hover, &:active, &:active:hover
    op_colours()

.code
  margin-bottom: 0.5%
  padding-bottom: 5%
  padding-top: 20%
  width: 80%
  margin-left: 10%
  font-size: medium
  &:hover, &:active, &:active:hover
    background: #4D5656

.timer
  color: orange
  font-size: larger
  font-weight: bolder

.talent
  &, &:focus
    zuhlke_colours()
  &:hover, &:active, &:active:hover
    op_zuhlke_colours()
  animation: fromBack 1s linear 1.5s backwards

/* Animations - Zuhlke splash */
.image
  #canvas
    position: relative
    z-index: 1000
    width: 100%
    height: 100%
    animation: fromBack 0.5s linear 0s backwards

@keyframes fromBack
  0%
    transform: scale(0)
    opacity: 0
  100%
    transform: scale(1)
    opacity: 1


/* Matchstick */
.operation
  height: 100%
  img
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  .horizontal
    height: 5%
    position: absolute
    img
      -webkit-transform: rotate(90deg)
      -webkit-transform-origin: 0 0
      position:relative
      top: 100%
    .middle
      height: 80%
    .bottom
      height: 80%
    .top
      height: 80%
  .verticalZindex
    height: 25%
    z-index: 100
    .plus
      z-index: 100
      height: 25%
      position: absolute

.number
  height: 100%
  img
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  .vertical
    height: 25%
    .left
      height: 100%
    .right
      height: 100%
  .horizontal
    height: 5%
    img
      -webkit-transform: rotate(-90deg)
      -webkit-transform-origin: -68% 30%
      position:relative
      top: 100%
    .middle
      height: 80%
    .bottom
      height: 80%
    .top
      height: 80%
